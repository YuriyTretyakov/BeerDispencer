@using Implementation;


@page "/"
@inject TimeZoneService TimeZoneService
@inject AccountService accountService; 
 

<PageTitle>Index</PageTitle>

<RadzenCard>
    <RadzenText Style="margin-bottom:50px" TextStyle="TextStyle.H5" TagName="TagName.H5" TextAlign="TextAlign.Center">@welcomeMessage</RadzenText>
    <RadzenImage Path="images/ugly-coyote-intro.jpg" Style="width:100%; height:30%;display:block background-size: 100%;" />
</RadzenCard>

@code {
    [CascadingParameter]
    public MainLayout mainLayout { get; set; }

    string welcomeMessage;
    DateTimeOffset now;


    protected override Task OnInitializedAsync()
    {

        if (@accountService.IsLoggedIn)
        {
            welcomeMessage = $"Welcome back to ye Ugly Coyote, {@accountService.UserName}";
        }
        else
        {
            welcomeMessage = $"Welcome to ye Ugly Coyote, stranger. You have to sign in";
        }
        return Task.CompletedTask;
    }
}
